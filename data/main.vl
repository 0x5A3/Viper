#PRINT "Viper tail call test\n";

#SET succ (#FN [n] (#ADD n 1));

#PRINT succ " => succ 1 = " (succ 1) "\n";

#PRINT "Mutual Looping test\n";

#SET loop1 (#FN [n] (
        #DO {
            #PRINT n "\n";
            #IF (#GT n 0) 
                (loop2 (#SUB n 1));
        }
    )
);
#SET loop2 (#FN [n] (
        #DO {
            #PRINT n "\n";
            #IF (#GT n 0) 
                (loop1 (#ADD n 2));
        }
    )
);

#PRINT "looping\n";
loop1 1000;